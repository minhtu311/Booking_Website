@model ViewModel.Beds.BedViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Thêm mới loại giường</h1>
</div>

<form action="/admin/bed/create" method="post">
    <div class="mb-3">
        @Html.LabelFor(x => x.Name, new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-outline-primary">Tạo mới</button>
        <a class="btn btn-outline-primary" href="@Url.Action("Index","Bed")">
            <span>Trở về</span>
        </a>
    </div>
</form>