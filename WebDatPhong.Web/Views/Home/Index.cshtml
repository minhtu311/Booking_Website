<!-- ========== ROOMTYPE ========== -->
<section class="shop" style="margin-top:0;padding-top: 0px">
    <div class="container">
        <div class="section-title">
            <h4>Loại phòng</h4>
            <a href="/Room/Index" class="view-all text-dark">Xem tất cả phòng</a>
        </div>
        <div class="shop-owl owl-carousel">
            @foreach (var item in roomTypes)
            {
                <!-- ITEM -->
                <div class="shop-item animated fadeInUp wow" data-wow-offset="30" data-wow-delay=".4s">
                    <figure class="color-overlay-hover">
                        <a href="@Url.Action("Index","RoomType",new { Id = item.Id })">
                            @{
                                string ImagePathRoomType = "~/Areas/Admin/wwwroot/ImageRoom/" + item.Image;
                                <img src="@Url.Content(ImagePathRoomType)" class="img-fluid" alt="Image" style="height:200px;">
                            }
                        </a>
                    </figure>
                    <div class="product-details">
                        <h4 class="product-title">
                            <a href="@Url.Action("Index","RoomType",new { Id = item.Id })">@item.Name</a>
                        </h4>
                        <div class="product-price">@Html.Raw(item.Detail)</div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- ========== SERVICES ========== -->
<section class="services pt-0">
    <div class="container">
        <div class="section-title">
            <h4>Dịch vụ</h4>
            <a href="/Service/Index" class="view-all text-dark">Xem tất cả dịch vụ</a>
        </div>
        <div class="row">
            <div class="col-lg-7 col-12">
                <div data-slider-id="services" class="services-owl owl-carousel">
                    @foreach (var item in services)
                    {
                        <figure class="gradient-overlay">
                            @{
                                string ImagePathService = "~/Areas/Admin/wwwroot/ImageService/" + item.Thumbnail;
                                <img src="@Url.Content(ImagePathService)" class="img-fluid" alt="Image" style="height: 430px;">
                            }
                            <figcaption>
                                <h4>@item.Name</h4>
                            </figcaption>
                        </figure>
                    }
                </div>
            </div>
            <div class="col-lg-5 col-12">
                <div class="owl-thumbs" data-slider-id="services">
                    @foreach (var item in services)
                    {
                        <div class="owl-thumb-item pl-3">
                            <div class="media-body">
                                <h5>@item.Name</h5>
                                <p>@item.Summary</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>