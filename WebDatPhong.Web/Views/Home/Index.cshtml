<!-- ========== REVOLUTION SLIDER ========== -->
<div class="slider">
    <div id="rev-slider-1" class="rev_slider gradient-slider" style="display:none" data-version="5.4.5">
        <ul>
            @foreach (var item in sliders)
            {
                <!-- SLIDE NR. 1 -->
                <li data-transition="crossfade">
                    <!-- MAIN IMAGE -->
                    @{
                        string ImagePathSlider = "~/Areas/Admin/wwwroot/ImageSlider/" + item.Image;
                        <img src="@Url.Content(ImagePathSlider)" alt="Image" title="Image" data-bgposition="center center" data-bgfit="cover" data-bgrepeat="no-repeat" data-bgparallax="10" class="rev-slidebg" data-no-retina="">
                    }
                    <!-- LAYER NR. 1 -->
                    <h1 class="tp-caption tp-resizeme"
                        data-x="center"
                        data-hoffset=""
                        data-y="320"
                        data-voffset=""
                        data-responsive_offset="on"
                        data-fontsize="['80','50','40','30']"
                        data-lineheight="['60','50','40','30']"
                        data-whitespace="nowrap"
                        data-frames='[{"delay":1000,"speed":1500,"frame":"0","from":"y:[-100%];z:0;rX:0deg;rY:0;rZ:0;sX:1;sY:1;skX:0;skY:0;","mask":"x:0px;y:0px;s:inherit;e:inherit;","to":"o:1;","ease":"Power3.easeInOut"},{"delay":"wait","speed":500,"frame":"999","to":"auto:auto;","ease":"Power3.easeInOut"}]'
                        style="z-index: 5; color: #fff; font-weight: 900; padding:15px">
                        @item.Name
                    </h1>
                </li>
            }
        </ul>
    </div>
    <!-- ========== BOOKING FORM ========== -->
    <div class="horizontal-booking-form">
        <div class="container">
            <div class="inner box-shadow-007">
                <!-- ========== BOOKING NOTIFICATION ========== -->
                <div id="booking-notification" class="notification"></div>
                <form action="/Room/SearchRoom" method="get">
                    <div class="row">
                        <!-- DATE -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>
                                    Ngày đến / Ngày đi
                                    <a href="#" title="Ngày đến / Ngày đi" data-toggle="popover" data-placement="top" data-trigger="hover" data-content="Vui lòng chọn ngày đến và ngày đi <br>*Nhận phòng từ 8:00 AM">
                                        <i class="fa fa-info-circle"></i>
                                    </a>
                                </label>
                                <input type="text" class="datepicker form-control" name="bookingdate" placeholder="Arrival & Departure" readonly="readonly">
                            </div>
                        </div>
                        <!-- GUESTS -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="form-group">
                                    <label>
                                        Số người
                                        <a href="#" title="Số người" data-toggle="popover" data-placement="top" data-trigger="hover" data-content="Vui lòng nhập số lượng khách">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </label>
                                    <input class="form-control" name="bookingnumberperson" type="number" data-trigger="hover" placeholder="Số người" min="1" oninvalid="this.setCustomValidity('Số lượng khách hàng không được bỏ trống và phải lớn hơn 0')" oninput="setCustomValidity()">
                                </div>
                            </div>
                        </div>
                        <!-- BOOKING BUTTON -->
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-book btn-dark">Xem phòng trống</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

