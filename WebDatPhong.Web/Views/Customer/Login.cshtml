@using ViewModel.Customers
@model LoginViewModel
@{ Layout = null;
   string message = ViewBag.Message;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Login Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid">
        <div class="row">

            <div class="col-4">
                <div class="logo">
                    <a href="/" style="text-decoration: none; margin:5px; color:black;"><h3>Hanava Nha Trang</h3></a>
                </div>
                <div style="margin-top: 8em">
                    <form action="/Customer/Login" method="post">
                        <h3 style="margin-bottom: 1em; text-align:center">Đăng nhập</h3>
                        @*<div class="danger text-danger">
                                @Html.ValidationSummary()
                            </div>*@

                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                        @if (!string.IsNullOrEmpty(message))
                        {
                        <div class="alert alert-danger">@message</div>
                        }
                        <div class="mb-3">
                            <div class="form-holder ">
                                <span class="lnr lnr-user"></span>
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Username" })
                            </div>
                            @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <div class="form-holder ">
                                <span class="lnr lnr-lock"></span>
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                            </div>
                            @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-success w-100 mb-3">
                            <span>Đăng nhập</span>
                        </button>
                        <div>
                            <p style="text-align:center">Bạn chưa có tài khoản? <a href="@Url.Action("Register","Customer")">Đăng ký</a> ngay!</p>
                            <p style="text-align:center">Quay lại <a href="/">trang chủ</a>.</p>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-8">
                @*<img src="~/Assets/images/sunrise-nha-trang-beach-hotel-spa-241.jpeg" />*@
                <img src="~/Assets/images/161520565.jpg" width="1010" height="753" />
            </div>
        </div>
    </div>
</body>
</html>